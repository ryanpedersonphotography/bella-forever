<section class="hero-watercolor-brush">
  <div class="hero__bg">
    <svg
      id="Layer_1"
      data-name="Layer 1"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="-100 0 1100 841.89"
      preserveAspectRatio="xMidYMid slice"
      aria-hidden="true"
    >
      <defs>
        <!-- ORIGINAL paintBlue filter -->
        <filter id="paintBlue" height="1000" width="1300" x="-200" y="-200">
          <!-- create some fractal noise -->
          <feTurbulence
            baseFrequency=".01"
            type="fractalNoise"
            numOctaves="4"
            seed="2"
            result="NOISE"
          />
          <feDisplacementMap in="SourceAlpha" scale="250" result="BLOBS" />
          <!-- tint the noise and invert for contrast -->
          <feColorMatrix
            in="NOISE"
            type="matrix"
            color-interpolation-filters="sRGB"
            values="
              0.61 0    0    0    0
              0    0.96 0    0    0
              0    0    0.99 0    0
              0    0    0    1    0.25"
            result="COLOURED-NOISE"
          />
          <!-- Add to source alpha -->
          <feComposite
            operator="in"
            in="COLOURED-NOISE"
            in2="BLOBS"
            result="FILL"
          />
          <feTurbulence
            numOctaves="4"
            seed="0"
            type="fractalNoise"
            baseFrequency="0.2"
          />
          <feDiffuseLighting
            lighting-color="rgb(250,250,250)"
            surfaceScale="0.5"
            kernelUnitLength="0.01"
            diffuseConstant="1.1"
            result="paper"
          >
            <feDistantLight elevation="40" azimuth="75" />
          </feDiffuseLighting>
          <feBlend in="FILL" in2="paper" mode="multiply" />
        </filter>

        <!-- ORIGINAL paper filter -->
        <filter id="paper" height="1000" width="1300" y="-200" x="-200">
          <feTurbulence
            numOctaves="4"
            seed="0"
            type="fractalNoise"
            baseFrequency="0.2"
          />
          <feDiffuseLighting
            lighting-color="rgb(250,250,250)"
            surfaceScale="0.5"
            kernelUnitLength="0.01"
            diffuseConstant="1.1"
            result="paper"
          >
            <feDistantLight elevation="40" azimuth="75" />
          </feDiffuseLighting>
        </filter>
      </defs>

      <!-- Paper background (unchanged) -->
      <rect x="0" y="0" width="1000" height="1000" filter="url(#paper)" />

      <!-- Watercolor brush stroke (unchanged) -->
      <path
        class="paint"
        pathLength="1"
        filter="url(#paintBlue)"
        d="M73.65,595.53S94.82,361.41,201.88,390.82s164.71,140,241.18,77.65,31.76-200,116.47-195.29,267.06,35.29,207.06,131.76S664.24,539.06,699.53,586.12"
        fill="none"
        stroke="#000"
        stroke-linecap="round"
        stroke-width="100"
      />
    </svg>
  </div>

  <div class="hero__content">
    <slot />
  </div>
</section>

<style>
  .hero-watercolor-brush {
    position: relative;
    min-height: 100vh; /* Full viewport height */
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 1.5rem;
    isolation: isolate;
    background: #000; /* in case SVG doesn't load */
  }

  .hero__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
  }

  .hero__bg svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .hero__content {
    position: relative;
    max-width: 72rem;
    text-align: center;
    z-index: 1;
  }

  /* EXACT stroke animation from original */

  .paint {
    stroke-dasharray: 1.2;
    stroke-dashoffset: 1.2;
    animation: paint 7s ease-in-out 0.5s both;
  }

  @keyframes paint {
    0% {
      stroke-dashoffset: 1.2;
      opacity: 0;
    }
    25% {
      opacity: 1;
    }
    100% {
      stroke-dashoffset: 0;
      opacity: 1;
    }
  }
</style>