<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Bella’s Dresser — Simple</title>
    <style>
      body{margin:0;min-height:100vh;display:grid;place-items:center;font-family:system-ui;background:#f7f1e8;color:#2a241f;}
      .card{background:#fff;border:1px solid rgba(0,0,0,.08);border-radius:16px;padding:24px;width:min(720px,92vw);}
      a{color:#2a241f;}
      .btn{display:inline-block;margin-top:12px;padding:10px 12px;border-radius:12px;border:1px solid rgba(0,0,0,.12);text-decoration:none;}
    </style>
    <script>
      (function(){
        const v = localStorage.getItem("bd_experience");
        if (v !== "simple") location.replace("/enter");
      })();
      function change(){
        localStorage.removeItem("bd_experience");
        sessionStorage.removeItem("bd_return_to");
        location.href = "/enter";
      }
      window.change = change;
    </script>
  </head>
  <body>
    <div class="card">
      <h1>Simple Version (placeholder)</h1>
      <p>This is where the low-graphics version will live.</p>
      <a class="btn" href="#" onclick="change(); return false;">Change experience</a>
    </div>
  </body>
</html>
