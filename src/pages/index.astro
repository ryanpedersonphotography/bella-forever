        backdrop-filter: blur(10px);
        border-radius: 25px;
        padding: 20px;
        box-shadow: var(--shadow-soft);
        transition: transform 0.3s ease;
        border: 2px solid transparent;
        position: relative;
        overflow: hidden;
      }

      .dress-card::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, var(--pastel-pink) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 0;
      }

      .dress-card:hover::before {
        opacity: 0.2;
      }

      .dress-card:hover {
        transform: translateY(-5px);
        border-color: var(--pastel-pink);
      }

      .dress-card-content {
        position: relative;
        z-index: 1;
      }

      .dress-illustration {
