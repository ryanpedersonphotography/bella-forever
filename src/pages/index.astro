---
import HeroStage from '../components/HeroStage.astro';
const year = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Bella's Dresser • A Storybook Dress Boutique</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Bella's Dresser - A tiny fairytale boutique where little-daydream dresses come to life. Step into our watercolor world." />

    <!-- Fonts: Matsu Theme (Nunito + PT Serif) + Existing (Cormorant/Quicksand for legacy support if needed) -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;700&family=PT+Serif:wght@400;700&family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Quicksand:wght@400;500;600&family=Short+Stack&display=swap" rel="stylesheet" />

  

    <style>

      /* =============================================

         MATSU THEME + BELLA'S DRESSER

         Exact style adoption from daisyui-matsu-theme

         ============================================= */

      

      :root {

        /* MATSU THEME VARIABLES (OKLCH) */

        /* Base colors */

        --color-base-100: oklch(0.91 0.048 83.6); /* background */

        --color-base-200: oklch(0.92 0.042 83.6); /* card/popover */

        --color-base-300: oklch(0.86 0.064 83.7); /* muted */

        --color-base-content: oklch(0.41 0.077 78.9); /* foreground */

  

        /* Primary colors */

        --color-primary: oklch(0.71 0.097 111.7);

        --color-primary-content: oklch(0.98 0.005 0);

        --color-primary-focus: oklch(0.59 0.096 111.8); /* primary-border */

  

        /* Secondary colors */

        --color-secondary: oklch(0.88 0.055 83.6);

        --color-secondary-content: oklch(0.51 0.077 78.9);

  

        /* Accent colors */

        --color-accent: oklch(0.86 0.055 83.6);

        --color-accent-content: oklch(0.26 0.016 0);

  

        /* Neutral colors */

        --color-neutral: oklch(0.74 0.063 80.8); /* border/input */

        --color-neutral-content: oklch(0.51 0.077 74.3); 

  

        /* Error/Destructive */

        --color-error: oklch(0.63 0.24 29.2);

        

        /* Shadows */

        --shadow-matsu: 0 2px 0 0 oklch(0.74 0.063 80.8);

        --shadow-primary: 0 2px 0 0 var(--color-primary-focus);

  

        /* Border Radius */

        --radius-box: 0.625rem;

        --border-width: 2px;

  

        /* BELLA'S DRESSER CUSTOM PALETTE (Kept for Watercolor strokes) */

        --sky-light: #eaffff;

        --sky-blue: #c2dcf7;

        --sky-pink: #ffebff;

        --sky-lavender: #e4d7f0;

        --coral-soft: #f5c7e0;

        --coral-warm: #e8937a;

        --rose-pink: #f5c7e0;

        --blush: #ffebff;

        --sage-light: #d9f6ce;

        --sage-green: #9ab88f;

        --sage-deep: #7da06d;

        --sunshine: #f7e4a8;

        --butter: #ffffed;

        --terracotta: #c9956c;

        --earth-brown: #a67c5b;

        --soil: #8b6b4f;

        

        --cream: var(--color-base-100); /* Map legacy to Matsu */

        --paper: var(--color-base-100);

        --ink: var(--color-base-content);

        --ink-soft: oklch(0.51 0.077 78.9); /* Mapped to secondary contentish */

        

        /* Watercolor Filter Variables */

        --shadow: 4px;

        --hue: 0deg;

        --sat: 100%;

        

        --hero-height: 100vh;

        --content-max: 1100px;

      }

  

      * {

        box-sizing: border-box;

        margin: 0;

        padding: 0;

      }

  

      html {

        scroll-behavior: smooth;

        background: var(--color-base-100);

        min-height: 100%;

      }

  

          body {

  

            font-family: "Nunito", "Quicksand", sans-serif;

  

            font-weight: 700; /* Matsu uses bold by default */

  

            color: var(--color-base-content);

  

            line-height: 1.7;

  

            overflow-x: hidden;

  

          }

  

      

  

          /* Matsu Theme Texture Overlay */

  

          .texture {

  

            background-image: url(https://hmarzban.github.io/daisyui-matsu-theme/assets/texture.jpg);

  

            background-size: 100% 100%;

  

            background-repeat: repeat;

  

            opacity: 0.12;

  

            mix-blend-mode: multiply;

  

            z-index: 100;

  

            isolation: isolate;

  

            position: fixed;

  

            inset: 0;

  

            width: 100vw;

  

            height: 100dvh;

  

            pointer-events: none;

  

          }

  

      

  

          h1, h2, h3, h4, h5 {

  

            font-family: "PT Serif", serif;

  

            font-weight: 700;

  

          }

    img {
      max-width: 100%;
      height: auto;
      display: block;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    /* =============================================
       STORYBOOK HERO - The Magic Entrance
       ============================================= */
    
    .hero {
      position: relative;
      min-height: var(--hero-height);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    /* Watercolor Sky - Top Layer */
    .hero-sky {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 75%;
      background: 
        /* Soft watercolor washes */
        radial-gradient(ellipse 80% 50% at 20% 30%, rgba(168, 213, 229, 0.5) 0%, transparent 50%),
        radial-gradient(ellipse 60% 40% at 80% 20%, rgba(245, 213, 224, 0.6) 0%, transparent 45%),
        radial-gradient(ellipse 70% 50% at 10% 60%, rgba(228, 215, 240, 0.4) 0%, transparent 40%),
        radial-gradient(ellipse 50% 35% at 90% 70%, rgba(168, 213, 229, 0.35) 0%, transparent 45%),
        radial-gradient(ellipse 90% 60% at 50% 10%, rgba(247, 228, 168, 0.25) 0%, transparent 50%),
        linear-gradient(180deg, 
          #e0f0f8 0%, 
          #eef5fa 20%,
          #f5eef5 40%,
          #faf5f8 60%,
          #f8f0ea 80%,
          #faf5ed 100%
        );
      z-index: 1;
    }

    /* Watercolor cloud-like shapes */
    .hero-sky::before,
    .hero-sky::after {
      content: '';
      position: absolute;
      border-radius: 50%;
      filter: blur(40px);
      opacity: 0.6;
    }

    .hero-sky::before {
      width: 300px;
      height: 150px;
      background: rgba(245, 213, 224, 0.5);
      top: 15%;
      left: 10%;
      animation: float-slow 20s ease-in-out infinite;
    }

    .hero-sky::after {
      width: 250px;
      height: 120px;
      background: rgba(168, 213, 229, 0.45);
      top: 25%;
      right: 15%;
      animation: float-slow 25s ease-in-out infinite reverse;
    }

    @keyframes float-slow {
      0%, 100% { transform: translateY(0) translateX(0); }
      50% { transform: translateY(-20px) translateX(10px); }
    }

    /* Ground Layer - Grass & Soil */
    .hero-ground {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: var(--grass-height);
      z-index: 2;
      overflow: hidden;
    }

    /* Soil base */
    .ground-soil {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 30%;
      background: linear-gradient(180deg,
        var(--earth-brown) 0%,
        var(--soil) 50%,
        #735c45 100%
      );
    }

    /* Grass layer with hand-drawn feel */
    .ground-grass {
      position: absolute;
      bottom: 25%;
      left: 0;
      right: 0;
      height: 80%;
      background: linear-gradient(180deg,
        transparent 0%,
        rgba(154, 184, 143, 0.3) 20%,
        var(--sage-light) 40%,
        var(--sage-green) 70%,
        var(--sage-deep) 100%
      );
      border-radius: 100% 100% 0 0 / 20% 20% 0 0;
    }

    /* Grass texture overlay */
    .ground-grass::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        repeating-linear-gradient(85deg, 
          transparent 0px, 
          transparent 3px, 
          rgba(125, 160, 109, 0.3) 3px, 
          rgba(125, 160, 109, 0.3) 5px
        ),
        repeating-linear-gradient(95deg, 
          transparent 0px, 
          transparent 4px, 
          rgba(154, 184, 143, 0.2) 4px, 
          rgba(154, 184, 143, 0.2) 6px
        );
    }

    /* Small grass blades at top edge */
    .ground-grass::after {
      content: '';
      position: absolute;
      top: -15px;
      left: 0;
      right: 0;
      height: 30px;
      background: 
        repeating-linear-gradient(88deg,
          transparent 0px,
          transparent 8px,
          var(--sage-green) 8px,
          var(--sage-green) 10px,
          transparent 10px,
          transparent 15px
        );
      clip-path: polygon(
        0% 100%, 2% 40%, 4% 100%, 6% 50%, 8% 100%, 10% 35%, 12% 100%, 14% 55%,
        16% 100%, 18% 45%, 20% 100%, 22% 60%, 24% 100%, 26% 40%, 28% 100%, 30% 50%,
        32% 100%, 34% 35%, 36% 100%, 38% 55%, 40% 100%, 42% 45%, 44% 100%, 46% 60%,
        48% 100%, 50% 40%, 52% 100%, 54% 50%, 56% 100%, 58% 35%, 60% 100%, 62% 55%,
        64% 100%, 66% 45%, 68% 100%, 70% 60%, 72% 100%, 74% 40%, 76% 100%, 78% 50%,
        80% 100%, 82% 35%, 84% 100%, 86% 55%, 88% 100%, 90% 45%, 92% 100%, 94% 60%,
        96% 100%, 98% 40%, 100% 100%
      );
    }

    /* Main Scene Container */
    .hero-scene {
      position: relative;
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-end;
      padding-bottom: calc(var(--grass-height) * 0.4);
      z-index: 10;
    }

    /* Storefront positioned on grass */
    .storefront-wrapper {
      position: relative;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      gap: clamp(0.5rem, 3vw, 2rem);
      padding: 0 1rem;
    }

    .storefront-image {
      max-width: clamp(280px, 50vw, 500px);
      filter: drop-shadow(0 20px 40px rgba(74, 63, 58, 0.2));
      position: relative;
      z-index: 5;
    }

    /* Bella standing near storefront */
    .bella-character {
      position: relative;
      max-width: clamp(120px, 20vw, 200px);
      z-index: 6;
      margin-bottom: -10px;
      filter: drop-shadow(0 15px 30px rgba(74, 63, 58, 0.15));
      animation: bella-sway 6s ease-in-out infinite;
    }

    @keyframes bella-sway {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      50% { transform: translateY(-5px) rotate(0.5deg); }
    }

    /* Bella's greeting speech bubble */
    .bella-greeting {
      position: absolute;
      top: -60px;
      right: -20px;
      background: var(--cream);
      border: 2px solid var(--coral-soft);
      border-radius: 20px 20px 20px 5px;
      padding: 0.75rem 1rem;
      max-width: 180px;
      font-size: 0.85rem;
      font-style: italic;
      color: var(--ink-soft);
      box-shadow: 0 8px 20px rgba(74, 63, 58, 0.12);
      opacity: 0;
      animation: greeting-appear 1s ease-out 1.5s forwards;
    }

    @keyframes greeting-appear {
      to { opacity: 1; }
    }

    .bella-greeting::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 15px;
      width: 15px;
      height: 15px;
      background: var(--cream);
      border-right: 2px solid var(--coral-soft);
      border-bottom: 2px solid var(--coral-soft);
      transform: rotate(45deg);
    }

    /* Decorative Trees */
    .tree {
      position: absolute;
      bottom: calc(var(--grass-height) * 0.35);
      z-index: 3;
    }

    .tree-left {
      left: 5%;
      width: clamp(80px, 15vw, 180px);
      opacity: 0.85;
    }

    .tree-right {
      right: 5%;
      width: clamp(70px, 12vw, 150px);
      opacity: 0.8;
    }

    /* Decorative Flower Pots */
    .flower-pot {
      position: absolute;
      bottom: calc(var(--grass-height) * 0.33);
      z-index: 8;
    }

    .flower-pot-1 {
      left: 18%;
      width: clamp(40px, 6vw, 80px);
    }

    .flower-pot-2 {
      right: 20%;
      width: clamp(35px, 5vw, 70px);
    }

    /* Site Title - Art Nouveau Style */
    .hero-title-area {
      position: absolute;
      top: clamp(2rem, 8vh, 5rem);
      left: 0;
      right: 0;
      text-align: center;
      z-index: 15;
      padding: 0 1rem;
    }

    .logo-image {
      max-width: clamp(220px, 40vw, 380px);
      margin: 0 auto;
      filter: drop-shadow(0 4px 8px rgba(74, 63, 58, 0.1));
    }

    .hero-tagline {
      margin-top: 0.75rem;
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: clamp(1rem, 2.5vw, 1.35rem);
      font-style: italic;
      color: var(--ink-soft);
      letter-spacing: 0.02em;
    }

    /* CTA Button */
    .hero-cta {
      position: absolute;
      bottom: calc(var(--grass-height) + 2rem);
      left: 50%;
      transform: translateX(-50%);
      z-index: 20;
    }

    .btn-primary {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: linear-gradient(135deg, var(--coral-warm) 0%, var(--coral-soft) 100%);
      color: white;
      font-family: "Quicksand", sans-serif;
      font-size: 1rem;
      font-weight: 600;
      padding: 0.9rem 1.8rem;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      box-shadow: 
        0 8px 25px rgba(232, 147, 122, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
      transition: all 0.3s ease;
      text-decoration: none;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 
        0 12px 35px rgba(232, 147, 122, 0.5),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    }

    .btn-primary:focus {
      outline: 3px solid var(--sky-blue);
      outline-offset: 3px;
    }

    @media (max-width: 768px) {
      .hero {
        min-height: 100svh;
      }
      
      .storefront-wrapper {
        flex-direction: column;
        align-items: center;
      }
      
      .bella-character {
        position: absolute;
        right: -10%;
        bottom: 0;
        max-width: 100px;
      }
      
      .bella-greeting {
        display: none;
      }
      
      .tree-left, .tree-right {
        display: none;
      }
      
      .flower-pot {
        display: none;
      }
    }

    /* =============================================
       CONTENT SECTIONS - Storybook Pages
       ============================================= */
    
    .content-wrapper {
      position: relative;
      background: var(--paper);
    }

    /* Watercolor paper texture overlay */
    .content-wrapper::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(ellipse 80% 40% at 90% 10%, rgba(245, 213, 224, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse 60% 35% at 10% 30%, rgba(168, 213, 229, 0.12) 0%, transparent 45%),
        radial-gradient(ellipse 70% 40% at 85% 60%, rgba(212, 228, 201, 0.15) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }

    section {
      position: relative;
      z-index: 1;
      padding: clamp(3rem, 8vw, 5rem) clamp(1rem, 4vw, 2rem);
      max-width: var(--content-max);
      margin: 0 auto;
    }

    /* Section Headers */
    .section-header {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .section-kicker {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.25em;
      color: var(--ink-light);
      margin-bottom: 0.5rem;
    }

    .section-title {
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: clamp(1.75rem, 4vw, 2.5rem);
      font-weight: 500;
      color: var(--ink);
      margin-bottom: 0.75rem;
      line-height: 1.2;
    }

    .section-subtitle {
      font-size: 1rem;
      color: var(--ink-soft);
      max-width: 36rem;
      margin: 0 auto;
    }

    /* =============================================
       STORY SECTION - About Bella
       ============================================= */
    
    #story {
      position: relative;
    }

    /* Decorative flower divider */
    #story::before {
      content: '✿';
      display: block;
      text-align: center;
      font-size: 2rem;
      color: var(--coral-soft);
      margin-bottom: 2rem;
      opacity: 0.7;
    }

    .story-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      align-items: start;
    }

    @media (max-width: 768px) {
      .story-content {
        grid-template-columns: 1fr;
      }
    }

    /* =============================================
       MATSU COMPONENTS (Refactored from Watercolor)
       ============================================= */

    /* Matsu Card Style (formerly watercolor-box) */
    .watercolor-box {
      position: relative;
      display: flex;
      flex-direction: column;
      padding: 1.75rem;
      border-radius: var(--radius-box);
      border: var(--border-width) solid var(--color-neutral);
      background-color: var(--color-base-200); /* Slightly darker card bg */
      box-shadow: var(--shadow-matsu);
      color: var(--color-base-content);
      transition: all 150ms ease;
      margin-bottom: 1rem;
    }
    
    .watercolor-box:hover {
      /* Matsu cards don't typically jump, but buttons do. 
         If we want interactive cards: */
      transform: translateY(2px);
      box-shadow: 0 1px 0 0 oklch(0.74 0.063 80.8); /* Smaller shadow on press */
    }

    /* Remove the heavy watercolor filter overlay from content cards for the clean Matsu look */
    .watercolor-box::before {
      display: none;
    }

    .watercolor-box h3 {
      font-family: "PT Serif", serif;
      font-size: 1.5rem;
      margin-bottom: 1rem;
      font-weight: 700;
    }
    
    .watercolor-box p {
      margin-bottom: 0.75rem;
      font-size: 1rem;
      font-family: "Nunito", sans-serif;
      font-weight: 500;
    }

    /* Specific Card Tweaks */
    .sketch-card {
      background-color: var(--color-base-100); /* White/Base background */
    }

    .watercolor-card {
      background-color: var(--color-secondary);
      color: var(--color-secondary-content);
      border-color: var(--color-secondary);
    }
    
    .watercolor-card strong {
      color: inherit;
    }

    /* Dress Cards */
    .dress-card {
      padding: 1.25rem;
      background-color: var(--color-base-100);
    }
    
    .dress-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 0 0 var(--color-neutral);
    }

    .dress-name {
      font-family: "PT Serif", serif;
      font-size: 1.3rem;
      margin-bottom: 0.5rem;
    }

    /* Visit Section */
    .visit-main {
      background-color: var(--color-base-200);
    }

    .visit-details {
      background-color: var(--color-base-100);
      border: var(--border-width) dashed var(--color-neutral); /* Dashed for "details" feel */
    }

    /* Matsu Badges (Tags) */
    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .watercolor-tag {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.25rem 0.75rem;
      font-size: 0.875rem;
      font-weight: 700;
      border-radius: var(--radius-box);
      border: var(--border-width) solid var(--color-neutral);
      background-color: var(--color-base-100);
      color: var(--color-base-content);
      box-shadow: 0 2px 0 0 var(--color-neutral);
      transition: all 150ms;
    }
    
    .watercolor-tag::before { display: none; } /* Remove filter */

    .watercolor-tag:hover {
      transform: translateY(1px);
      box-shadow: 0 1px 0 0 var(--color-neutral);
    }

    /* Matsu Button Style */
    .btn-primary {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-family: "Nunito", sans-serif;
      font-weight: 700;
      font-size: 1rem;
      padding: 0.75rem 1.5rem;
      border-radius: var(--radius-box);
      border: var(--border-width) solid var(--color-primary-focus);
      background-color: var(--color-primary);
      color: var(--color-primary-content);
      box-shadow: 0 2px 0 0 var(--color-primary-focus);
      cursor: pointer;
      text-decoration: none;
      transition: all 150ms;
      /* Remove old filter/mix-blend */
      mix-blend-mode: normal;
      isolation: auto;
      text-shadow: none;
    }

    .btn-primary::before { display: none; } /* Remove watercolor filter */

    .btn-primary:hover {
      transform: translateY(2px);
      box-shadow: none; /* "Pressed" effect */
    }
    
    .btn-primary:active {
      transform: translateY(2px);
    }

    .visit-details h4 {
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: 1.1rem;
      margin-bottom: 0.75rem;
      color: var(--coral-warm);
    }

    .visit-details p {
      font-size: 0.9rem;
      color: var(--ink-soft);
      margin-bottom: 1rem;
    }

    .details-grid {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 0.5rem 1rem;
      font-size: 0.85rem;
    }

    .details-grid dt {
      font-weight: 600;
      color: var(--ink);
    }

    .details-grid dd {
      color: var(--ink-soft);
    }

    .details-grid a {
      color: var(--coral-warm);
      text-decoration: underline;
      text-decoration-style: dotted;
      text-underline-offset: 2px;
    }

    .details-grid a:hover {
      color: var(--ink);
    }

    /* =============================================
       FOOTER - Storybook Ending
       ============================================= */
    
    footer {
      background: 
        linear-gradient(180deg,
          var(--paper) 0%,
          var(--butter) 100%
        );
      text-align: center;
      padding: 3rem 1rem 2rem;
      position: relative;
    }

    footer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 10%;
      right: 10%;
      height: 2px;
      background: 
        linear-gradient(90deg,
          transparent 0%,
          var(--coral-soft) 20%,
          var(--sage-green) 50%,
          var(--coral-soft) 80%,
          transparent 100%
        );
