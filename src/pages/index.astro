      :root {
        --pastel-pink: #ffd6e8;
        --pastel-lavender: #e8d5ff;
        --pastel-mint: #d0f4e4;
        --pastel-peach: #ffe5d6;
        --pastel-sky: #d6e8ff;
        --pastel-lemon: #fff9d6;
        --soft-white: #fffef8;
        --text-purple: #7c5295;
        --text-soft: #9b8aa3;
        --accent-coral: #ff9fb2;
        --accent-lilac: #c8a2ff;
        --shadow-soft: 0 8px 32px rgba(149, 119, 200, 0.12);
        --radius-bubble: 30px;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: "Comfortaa", cursive;
        color: var(--text-purple);
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
        background: var(--soft-white);
      }

      /* Dreamy watercolor background */
      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background:
          radial-gradient(ellipse at 20% 30%, var(--pastel-pink) 0%, transparent 40%),
          radial-gradient(ellipse at 80% 40%, var(--pastel-lavender) 0%, transparent 45%),
          radial-gradient(ellipse at 10% 70%, var(--pastel-mint) 0%, transparent 40%),
          radial-gradient(ellipse at 90% 80%, var(--pastel-peach) 0%, transparent 35%),
          radial-gradient(ellipse at 50% 10%, var(--pastel-sky) 0%, transparent 50%),
          radial-gradient(ellipse at 60% 90%, var(--pastel-lemon) 0%, transparent 40%);
        opacity: 0.6;
        animation: dreamyFloat 20s ease-in-out infinite;
        z-index: -2;
      }

      /* Floating watercolor blobs */
      body::after {
        content: "";
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background:
          radial-gradient(circle at 25% 25%, rgba(255, 214, 232, 0.4) 0%, transparent 25%),
          radial-gradient(circle at 75% 75%, rgba(232, 213, 255, 0.4) 0%, transparent 25%),
          radial-gradient(circle at 25% 75%, rgba(208, 244, 228, 0.3) 0%, transparent 30%),
          radial-gradient(circle at 75% 25%, rgba(255, 229, 214, 0.3) 0%, transparent 30%);
        animation: watercolorDrift 30s linear infinite;
        z-index: -1;
      }

      @keyframes dreamyFloat {
        0%, 100% {
          transform: scale(1) rotate(0deg);
        }
        33% {
          transform: scale(1.05) rotate(1deg);
        }
        66% {
          transform: scale(1.02) rotate(-1deg);
        }
      }

      @keyframes watercolorDrift {
        from {
          transform: rotate(0deg) scale(1.2);
        }
        to {
          transform: rotate(360deg) scale(1.2);
        }
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        position: relative;
        z-index: 1;
      }

      /* Header */
      header {
        text-align: center;
        padding: 30px 20px;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(10px);
        border-radius: var(--radius-bubble);
        margin-bottom: 30px;
        box-shadow: var(--shadow-soft);
      }

      .logo {
        display: inline-block;
        margin-bottom: 15px;
      }

      .logo h1 {
        font-family: "Dancing Script", cursive;
        font-size: 3.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, var(--accent-coral), var(--accent-lilac));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 2px 2px 8px rgba(200, 162, 255, 0.2);
        margin-bottom: 5px;
        animation: sparkle 3s ease-in-out infinite;
      }

      @keyframes sparkle {
        0%, 100% {
          transform: scale(1) rotate(0deg);
        }
        50% {
          transform: scale(1.05) rotate(-2deg);
        }
      }

      .logo-sparkles {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
      }

      .sparkle {
        position: absolute;
        color: var(--accent-coral);
        animation: twinkle 2s ease-in-out infinite;
      }

      .sparkle:nth-child(1) {
        top: 10%;
        left: 20%;
        animation-delay: 0s;
      }

      .sparkle:nth-child(2) {
        top: 20%;
        right: 25%;
        animation-delay: 0.5s;
        color: var(--accent-lilac);
      }

      .sparkle:nth-child(3) {
        bottom: 30%;
        left: 15%;
        animation-delay: 1s;
      }

      @keyframes twinkle {
        0%, 100% {
          opacity: 0;
          transform: scale(0.5);
        }
        50% {
          opacity: 1;
          transform: scale(1) rotate(180deg);
        }
      }

      .tagline {
        font-family: "Kalam", cursive;
        font-size: 1.2rem;
        color: var(--text-soft);
        margin-bottom: 10px;
      }

      .location {
