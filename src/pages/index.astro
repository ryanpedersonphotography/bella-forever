const year = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Bella's Dresser • A Storybook Dress Boutique</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Bella's Dresser - A tiny fairytale boutique where little-daydream dresses come to life. Step into our watercolor world." />

  <!-- Fonts: Elegant script + friendly readable sans -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Quicksand:wght@400;500;600&display=swap" rel="stylesheet" />

  <style>
    /* =============================================
       BELLA'S DRESSER - WATERCOLOR STORYBOOK THEME
       A dreamy, hand-painted aesthetic
       ============================================= */
    
    :root {
      /* Watercolor Palette - bright, pastel, cheerful */
      --sky-light: #e8f4fc;
      --sky-blue: #a8d5e5;
      --sky-pink: #f5d5e0;
      --sky-lavender: #e4d7f0;
      
      --coral-soft: #f0b4a3;
      --coral-warm: #e8937a;
      --rose-pink: #d49a9a;
      --blush: #f7d4d4;
      
      --sage-light: #d4e4c9;
      --sage-green: #9ab88f;
      --sage-deep: #7da06d;
      
      --sunshine: #f7e4a8;
      --butter: #faf3d8;
      
      --terracotta: #c9956c;
      --earth-brown: #a67c5b;
      --soil: #8b6b4f;
      
      --cream: #fdfaf5;
      --cream-warm: #faf5ed;
      --paper: #f9f5f0;
      
      --ink: #4a3f3a;
      --ink-soft: #6d5f58;
      --ink-light: #9a8b82;
      
      /* Storybook dimensions */
      --hero-height: 100vh;
      --grass-height: 25vh;
      --content-max: 1100px;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: "Quicksand", "Segoe UI", system-ui, sans-serif;
      background: var(--cream);
      color: var(--ink);
      line-height: 1.7;
      overflow-x: hidden;
    }

    img {
      max-width: 100%;
      height: auto;
      display: block;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    /* =============================================
       STORYBOOK HERO - The Magic Entrance
       ============================================= */
    
    .hero {
      position: relative;
      min-height: var(--hero-height);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    /* Watercolor Sky - Top Layer */
    .hero-sky {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 75%;
      background: 
        /* Soft watercolor washes */
        radial-gradient(ellipse 80% 50% at 20% 30%, rgba(168, 213, 229, 0.5) 0%, transparent 50%),
        radial-gradient(ellipse 60% 40% at 80% 20%, rgba(245, 213, 224, 0.6) 0%, transparent 45%),
        radial-gradient(ellipse 70% 50% at 10% 60%, rgba(228, 215, 240, 0.4) 0%, transparent 40%),
        radial-gradient(ellipse 50% 35% at 90% 70%, rgba(168, 213, 229, 0.35) 0%, transparent 45%),
        radial-gradient(ellipse 90% 60% at 50% 10%, rgba(247, 228, 168, 0.25) 0%, transparent 50%),
        linear-gradient(180deg, 
          #e0f0f8 0%, 
          #eef5fa 20%,
          #f5eef5 40%,
          #faf5f8 60%,
          #f8f0ea 80%,
          #faf5ed 100%
        );
      z-index: 1;
    }

    /* Watercolor cloud-like shapes */
    .hero-sky::before,
    .hero-sky::after {
      content: '';
      position: absolute;
      border-radius: 50%;
      filter: blur(40px);
      opacity: 0.6;
    }

    .hero-sky::before {
      width: 300px;
      height: 150px;
      background: rgba(245, 213, 224, 0.5);
      top: 15%;
      left: 10%;
      animation: float-slow 20s ease-in-out infinite;
    }

    .hero-sky::after {
      width: 250px;
      height: 120px;
      background: rgba(168, 213, 229, 0.45);
      top: 25%;
      right: 15%;
      animation: float-slow 25s ease-in-out infinite reverse;
    }

    @keyframes float-slow {
      0%, 100% { transform: translateY(0) translateX(0); }
      50% { transform: translateY(-20px) translateX(10px); }
    }

    /* Ground Layer - Grass & Soil */
    .hero-ground {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: var(--grass-height);
      z-index: 2;
      overflow: hidden;
    }

    /* Soil base */
    .ground-soil {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 30%;
      background: linear-gradient(180deg,
        var(--earth-brown) 0%,
        var(--soil) 50%,
        #735c45 100%
      );
    }

    /* Grass layer with hand-drawn feel */
    .ground-grass {
      position: absolute;
      bottom: 25%;
      left: 0;
      right: 0;
      height: 80%;
      background: linear-gradient(180deg,
        transparent 0%,
        rgba(154, 184, 143, 0.3) 20%,
        var(--sage-light) 40%,
        var(--sage-green) 70%,
        var(--sage-deep) 100%
      );
      border-radius: 100% 100% 0 0 / 20% 20% 0 0;
    }

    /* Grass texture overlay */
    .ground-grass::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        repeating-linear-gradient(85deg, 
          transparent 0px, 
          transparent 3px, 
          rgba(125, 160, 109, 0.3) 3px, 
          rgba(125, 160, 109, 0.3) 5px
        ),
        repeating-linear-gradient(95deg, 
          transparent 0px, 
          transparent 4px, 
          rgba(154, 184, 143, 0.2) 4px, 
          rgba(154, 184, 143, 0.2) 6px
        );
    }

    /* Small grass blades at top edge */
    .ground-grass::after {
      content: '';
      position: absolute;
      top: -15px;
      left: 0;
      right: 0;
      height: 30px;
      background: 
        repeating-linear-gradient(88deg,
          transparent 0px,
          transparent 8px,
          var(--sage-green) 8px,
          var(--sage-green) 10px,
          transparent 10px,
          transparent 15px
        );
      clip-path: polygon(
        0% 100%, 2% 40%, 4% 100%, 6% 50%, 8% 100%, 10% 35%, 12% 100%, 14% 55%,
        16% 100%, 18% 45%, 20% 100%, 22% 60%, 24% 100%, 26% 40%, 28% 100%, 30% 50%,
        32% 100%, 34% 35%, 36% 100%, 38% 55%, 40% 100%, 42% 45%, 44% 100%, 46% 60%,
        48% 100%, 50% 40%, 52% 100%, 54% 50%, 56% 100%, 58% 35%, 60% 100%, 62% 55%,
        64% 100%, 66% 45%, 68% 100%, 70% 60%, 72% 100%, 74% 40%, 76% 100%, 78% 50%,
        80% 100%, 82% 35%, 84% 100%, 86% 55%, 88% 100%, 90% 45%, 92% 100%, 94% 60%,
        96% 100%, 98% 40%, 100% 100%
      );
    }

    /* Main Scene Container */
    .hero-scene {
      position: relative;
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-end;
      padding-bottom: calc(var(--grass-height) * 0.4);
      z-index: 10;
    }

    /* Storefront positioned on grass */
    .storefront-wrapper {
      position: relative;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      gap: clamp(0.5rem, 3vw, 2rem);
      padding: 0 1rem;
    }

    .storefront-image {
      max-width: clamp(280px, 50vw, 500px);
      filter: drop-shadow(0 20px 40px rgba(74, 63, 58, 0.2));
      position: relative;
      z-index: 5;
    }

    /* Bella standing near storefront */
    .bella-character {
      position: relative;
      max-width: clamp(120px, 20vw, 200px);
      z-index: 6;
      margin-bottom: -10px;
      filter: drop-shadow(0 15px 30px rgba(74, 63, 58, 0.15));
      animation: bella-sway 6s ease-in-out infinite;
    }

    @keyframes bella-sway {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      50% { transform: translateY(-5px) rotate(0.5deg); }
    }

    /* Bella's greeting speech bubble */
    .bella-greeting {
      position: absolute;
      top: -60px;
      right: -20px;
      background: var(--cream);
      border: 2px solid var(--coral-soft);
      border-radius: 20px 20px 20px 5px;
      padding: 0.75rem 1rem;
      max-width: 180px;
      font-size: 0.85rem;
      font-style: italic;
      color: var(--ink-soft);
      box-shadow: 0 8px 20px rgba(74, 63, 58, 0.12);
      opacity: 0;
      animation: greeting-appear 1s ease-out 1.5s forwards;
    }

    @keyframes greeting-appear {
      to { opacity: 1; }
    }

    .bella-greeting::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 15px;
      width: 15px;
      height: 15px;
      background: var(--cream);
      border-right: 2px solid var(--coral-soft);
      border-bottom: 2px solid var(--coral-soft);
      transform: rotate(45deg);
    }

    /* Decorative Trees */
    .tree {
      position: absolute;
      bottom: calc(var(--grass-height) * 0.35);
      z-index: 3;
    }

    .tree-left {
      left: 5%;
      width: clamp(80px, 15vw, 180px);
      opacity: 0.85;
    }

    .tree-right {
      right: 5%;
      width: clamp(70px, 12vw, 150px);
      opacity: 0.8;
    }

    /* Decorative Flower Pots */
    .flower-pot {
      position: absolute;
      bottom: calc(var(--grass-height) * 0.33);
      z-index: 8;
    }

    .flower-pot-1 {
      left: 18%;
      width: clamp(40px, 6vw, 80px);
    }

    .flower-pot-2 {
      right: 20%;
      width: clamp(35px, 5vw, 70px);
    }

    /* Site Title - Art Nouveau Style */
    .hero-title-area {
      position: absolute;
      top: clamp(2rem, 8vh, 5rem);
      left: 0;
      right: 0;
      text-align: center;
      z-index: 15;
      padding: 0 1rem;
    }

    .logo-image {
      max-width: clamp(220px, 40vw, 380px);
      margin: 0 auto;
      filter: drop-shadow(0 4px 8px rgba(74, 63, 58, 0.1));
    }

    .hero-tagline {
      margin-top: 0.75rem;
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: clamp(1rem, 2.5vw, 1.35rem);
      font-style: italic;
      color: var(--ink-soft);
      letter-spacing: 0.02em;
    }

    /* CTA Button */
    .hero-cta {
      position: absolute;
      bottom: calc(var(--grass-height) + 2rem);
      left: 50%;
      transform: translateX(-50%);
      z-index: 20;
    }

    .btn-primary {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: linear-gradient(135deg, var(--coral-warm) 0%, var(--coral-soft) 100%);
      color: white;
      font-family: "Quicksand", sans-serif;
      font-size: 1rem;
      font-weight: 600;
      padding: 0.9rem 1.8rem;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      box-shadow: 
        0 8px 25px rgba(232, 147, 122, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
      transition: all 0.3s ease;
      text-decoration: none;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 
        0 12px 35px rgba(232, 147, 122, 0.5),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    }

    .btn-primary:focus {
      outline: 3px solid var(--sky-blue);
      outline-offset: 3px;
    }

    @media (max-width: 768px) {
      .hero {
        min-height: 100svh;
      }
      
      .storefront-wrapper {
        flex-direction: column;
        align-items: center;
      }
      
      .bella-character {
        position: absolute;
        right: -10%;
        bottom: 0;
        max-width: 100px;
      }
      
      .bella-greeting {
        display: none;
      }
      
      .tree-left, .tree-right {
        display: none;
      }
      
      .flower-pot {
        display: none;
      }
    }

    /* =============================================
       CONTENT SECTIONS - Storybook Pages
       ============================================= */
    
    .content-wrapper {
      position: relative;
      background: var(--paper);
    }

    /* Watercolor paper texture overlay */
    .content-wrapper::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(ellipse 80% 40% at 90% 10%, rgba(245, 213, 224, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse 60% 35% at 10% 30%, rgba(168, 213, 229, 0.12) 0%, transparent 45%),
        radial-gradient(ellipse 70% 40% at 85% 60%, rgba(212, 228, 201, 0.15) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }

    section {
      position: relative;
      z-index: 1;
      padding: clamp(3rem, 8vw, 5rem) clamp(1rem, 4vw, 2rem);
      max-width: var(--content-max);
      margin: 0 auto;
    }

    /* Section Headers */
    .section-header {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .section-kicker {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.25em;
      color: var(--ink-light);
      margin-bottom: 0.5rem;
    }

    .section-title {
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: clamp(1.75rem, 4vw, 2.5rem);
      font-weight: 500;
      color: var(--ink);
      margin-bottom: 0.75rem;
      line-height: 1.2;
    }

    .section-subtitle {
      font-size: 1rem;
      color: var(--ink-soft);
      max-width: 36rem;
      margin: 0 auto;
    }

    /* =============================================
       STORY SECTION - About Bella
       ============================================= */
    
    #story {
      position: relative;
    }

    /* Decorative flower divider */
    #story::before {
      content: '✿';
      display: block;
      text-align: center;
      font-size: 2rem;
      color: var(--coral-soft);
      margin-bottom: 2rem;
      opacity: 0.7;
    }

    .story-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      align-items: start;
    }

    @media (max-width: 768px) {
      .story-content {
        grid-template-columns: 1fr;
      }
    }

    /* Sketched Card Style */
    .sketch-card {
      background: var(--cream);
      padding: 1.75rem;
      position: relative;
      /* Hand-drawn border effect */
      border: 2px solid var(--coral-soft);
      border-radius: 12px 8px 15px 6px;
      box-shadow: 
        4px 4px 0 var(--sage-light),
        0 10px 30px rgba(74, 63, 58, 0.08);
    }

    /* Irregular corner decorations */
    .sketch-card::before {
      content: '';
      position: absolute;
      top: -3px;
      left: -3px;
      right: -3px;
      bottom: -3px;
      border: 1px dashed var(--sage-green);
      border-radius: 14px 10px 17px 8px;
      opacity: 0.5;
      pointer-events: none;
    }

    .sketch-card h3 {
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: 1.4rem;
      margin-bottom: 1rem;
      color: var(--ink);
    }

    .sketch-card p {
      font-size: 0.95rem;
      color: var(--ink-soft);
      margin-bottom: 0.75rem;
    }

    /* Decorative tags */
    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .tag {
      background: var(--butter);
      border: 1px dashed var(--coral-soft);
      border-radius: 20px;
      padding: 0.4rem 0.9rem;
      font-size: 0.8rem;
      color: var(--ink-soft);
    }

    /* Watercolor quote card */
    .watercolor-card {
      background: 
        linear-gradient(135deg, 
          rgba(245, 213, 224, 0.4) 0%, 
          rgba(212, 228, 201, 0.4) 50%,
          rgba(168, 213, 229, 0.3) 100%
        );
      padding: 1.75rem;
      border-radius: 10px 20px 8px 18px;
      border: 1px solid rgba(154, 184, 143, 0.5);
      position: relative;
    }

    .watercolor-card::before {
      content: '"';
      position: absolute;
      top: 0.5rem;
      left: 1rem;
      font-family: Georgia, serif;
      font-size: 3rem;
      color: var(--coral-soft);
      opacity: 0.5;
      line-height: 1;
    }

    .watercolor-card p {
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: 1.15rem;
      font-style: italic;
      color: var(--ink);
      padding-left: 1.5rem;
    }

    .watercolor-card strong {
      color: var(--coral-warm);
    }

    /* =============================================
       DRESS GALLERY - Watercolor Frames
       ============================================= */
    
    #dresses {
      background: 
        linear-gradient(180deg, 
          transparent 0%,
          rgba(212, 228, 201, 0.1) 20%,
          rgba(212, 228, 201, 0.15) 80%,
          transparent 100%
        );
      border-radius: 0;
      max-width: 100%;
      padding-left: 0;
      padding-right: 0;
    }

    #dresses > .section-header,
    #dresses > .dress-gallery {
      max-width: var(--content-max);
      margin-left: auto;
      margin-right: auto;
      padding-left: clamp(1rem, 4vw, 2rem);
      padding-right: clamp(1rem, 4vw, 2rem);
    }

    .dress-gallery {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }

    @media (max-width: 900px) {
      .dress-gallery {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 600px) {
      .dress-gallery {
        grid-template-columns: 1fr;
        max-width: 400px;
      }
    }

    /* Dress Card with watercolor frame */
    .dress-card {
      background: var(--cream);
      padding: 1.25rem;
      position: relative;
      transition: transform 0.3s ease;
      
      /* Watercolor frame effect */
      border: 3px solid transparent;
      border-image: linear-gradient(
        135deg,
        var(--coral-soft) 0%,
        var(--sky-pink) 25%,
        var(--sage-light) 50%,
        var(--sky-blue) 75%,
        var(--coral-soft) 100%
      ) 1;
    }

    .dress-card::before {
      content: '';
      position: absolute;
      inset: 4px;
      border: 1px dashed var(--ink-light);
      opacity: 0.3;
      pointer-events: none;
    }

    .dress-card:hover {
      transform: translateY(-5px) rotate(0.5deg);
    }

    .dress-kicker {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--coral-warm);
      margin-bottom: 0.4rem;
    }

    .dress-name {
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: 1.3rem;
      color: var(--ink);
      margin-bottom: 0.5rem;
    }

    .dress-meta {
      display: flex;
      justify-content: space-between;
      font-size: 0.75rem;
      color: var(--ink-light);
      margin-bottom: 0.75rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px dotted var(--sage-light);
    }

    .dress-description {
      font-size: 0.9rem;
      color: var(--ink-soft);
      line-height: 1.6;
    }

    /* =============================================
       VISIT SECTION - Contact & Hours
       ============================================= */
    
    #visit {
      position: relative;
    }

    #visit::before {
      content: '❀ ❀ ❀';
      display: block;
      text-align: center;
      font-size: 1.25rem;
      color: var(--sage-green);
      margin-bottom: 2rem;
      letter-spacing: 1rem;
      opacity: 0.6;
    }

    .visit-content {
      display: grid;
      grid-template-columns: 1.5fr 1fr;
      gap: 2rem;
    }

    @media (max-width: 768px) {
      .visit-content {
        grid-template-columns: 1fr;
      }
    }

    .visit-main {
      background: 
        linear-gradient(135deg,
          rgba(245, 213, 224, 0.3) 0%,
          rgba(212, 228, 201, 0.3) 100%
        );
      padding: 2rem;
      border-radius: 15px 8px 12px 20px;
      border: 2px solid var(--sage-light);
    }

    .visit-main h3 {
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: 1.4rem;
      margin-bottom: 1rem;
    }

    .visit-main p {
      font-size: 0.95rem;
      color: var(--ink-soft);
      margin-bottom: 1rem;
    }

    .visit-list {
      list-style: none;
      padding: 0;
    }

    .visit-list li {
      position: relative;
      padding-left: 1.75rem;
      margin-bottom: 0.6rem;
      font-size: 0.9rem;
      color: var(--ink);
    }

    .visit-list li::before {
      content: '✿';
      position: absolute;
      left: 0;
      color: var(--coral-soft);
    }

    .visit-details {
      background: var(--cream);
      padding: 1.5rem;
      border-radius: 8px 15px 10px 12px;
      border: 2px dashed var(--coral-soft);
    }

    .visit-details h4 {
      font-family: "Cormorant Garamond", Georgia, serif;
      font-size: 1.1rem;
      margin-bottom: 0.75rem;
      color: var(--coral-warm);
    }

    .visit-details p {
      font-size: 0.9rem;
      color: var(--ink-soft);
      margin-bottom: 1rem;
    }

    .details-grid {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 0.5rem 1rem;
      font-size: 0.85rem;
    }

    .details-grid dt {
      font-weight: 600;
      color: var(--ink);
    }

    .details-grid dd {
      color: var(--ink-soft);
    }

    .details-grid a {
      color: var(--coral-warm);
      text-decoration: underline;
      text-decoration-style: dotted;
      text-underline-offset: 2px;
    }

    .details-grid a:hover {
      color: var(--ink);
    }

    /* =============================================
       FOOTER - Storybook Ending
       ============================================= */
    
    footer {
      background: 
        linear-gradient(180deg,
          var(--paper) 0%,
          var(--butter) 100%
        );
      text-align: center;
      padding: 3rem 1rem 2rem;
