---
const SIGN_SRC = "/bellas-bigspashlogo.png";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Bella’s Dresser — Choose</title>
    <style>
      body{margin:0;min-height:100vh;display:grid;place-items:center;background:#2a241f;}
      .wrap{display:flex;flex-direction:column;align-items:center;gap:22px;padding:48px 24px;}
      .sign{
        width: 760px; height:auto;
        filter: drop-shadow(0 22px 30px rgba(0,0,0,.30));
        user-select:none; -webkit-user-drag:none;
      }
      .btns{display:flex;gap:14px;}
      .btn{
        font:700 16px/1 system-ui;
        padding:14px 18px;border-radius:14px;
        border:1px solid rgba(255,255,255,.18);
        background:rgba(255,255,255,.10);
        color:#fff;cursor:pointer;
        backdrop-filter:blur(10px);
      }
      .btn:hover{background:rgba(255,255,255,.16);}
      .sub{color:rgba(255,255,255,.72);font:500 14px/1.35 system-ui;text-align:center;}
    </style>
    <script>
      (function(){
        const v = localStorage.getItem("bd_experience");
        if (v === "fancy") location.replace(sessionStorage.getItem("bd_return_to") || "/");
        if (v === "simple") location.replace("/simple");
      })();

      function choose(which){
        localStorage.setItem("bd_experience", which);
        if (which === "simple") { location.href = "/simple"; return; }
        const back = sessionStorage.getItem("bd_return_to") || "/";
        location.href = back;
      }
      window.choose = choose;
    </script>
  </head>
  <body>
    <div class="wrap">
      <img class="sign" src={SIGN_SRC} alt="Bella's Dresser sign" />
      <div class="sub">Choose your experience.</div>
      <div class="btns">
        <button class="btn" onclick="choose('simple')">Simple Version</button>
        <button class="btn" onclick="choose('fancy')">Fancy Version</button>
      </div>
    </div>
  </body>
</html>
